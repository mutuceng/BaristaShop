@model CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Ekleme</h4>
                <br/>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post" asp-controller="Category" asp-action="CreateCategory">
                        <!-- tag helper olmadan asp-for gibi etiketleri görmüyor onu tag helperı da viewimportsla ekliyoruz -->
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" />
                        <br/>
                        <button class="btn btn-primary">Kategoriyi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

