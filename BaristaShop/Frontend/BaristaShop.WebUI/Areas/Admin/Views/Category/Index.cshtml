@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0 ;
}

<!--Kategoriler-->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">

                <!-- Kategoriler -->
                <div class="table-responsive">
                    <table id="add-row" class="display table table-striped table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Görsel</th>
                                <th style="width: 20%">İşlem</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Görsel</th>
                                <th style="width: 20%">İşlem</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var category in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@category.CategoryName</td>
                                    <td>
                                        @*~/@category.CategoryImage    *@   
                                            <img src="~/@category.CategoryImage" alt="baristashop @category.CategoryName" style="width: 100px; height: auto;" />
                                    </td>

                                    <td>
                                        <div class="form-button-action">
                                            <a href="/Admin/Category/UpdateCategory/@category.CategoryId" class="btn btn-link btn-primary">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="/Admin/Category/DeleteCategory/@category.CategoryId" class="btn btn-link btn-danger">
                                                <i class="fa fa-times"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-header">
                <div class="d-flex align-items-center">
                    <a href="/Admin/Category/CreateCategory/" class="btn btn-primary btn-round ms-auto">
                        <i class="fa fa-plus"></i>
                        Kategori Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

