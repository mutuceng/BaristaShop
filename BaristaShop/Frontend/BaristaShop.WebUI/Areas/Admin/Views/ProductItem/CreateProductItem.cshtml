@model CreateProductItemDto

@{
    ViewData["Title"] = "CreateProductItem";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Ekleme</h4>
                <div id="progress-container" style="width: 100%; background: #ddd; border-radius: 10px; margin: 20px 0;">
                    <div id="progress-bar" style="width: 20%; height: 20px; background: #4caf50; border-radius: 10px; text-align: center; color: white;">
                        %20
                    </div>
                </div>
                <br />

                <div class="bs-example" data-example-id="bordered-table" >
                    <h4>Ürün Bilgileri</h4>
                    <form method="post" asp-controller="ProductItem" asp-action="CreateProductItem">
                        <div id="feature-container">
                            <input type="hidden" name="ProductId" value="@ViewBag.ProductId" class="form-control" />
                            <label>SKU</label>
                            <input type="text" name="SKU" class="form-control" required/>
                            <label>Product Stock</label>
                            <input type="text" name="ProductStock" class="form-control" required/>
                            <label>Product Price</label>
                            <input type="text" name="ProductPrice" class="form-control" required/>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Sonraki Adım</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
