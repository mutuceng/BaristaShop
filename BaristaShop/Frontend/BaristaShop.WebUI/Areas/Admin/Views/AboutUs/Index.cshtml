@model ResultAboutUsDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display table table-striped table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Açıklama</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th style="width: 10%">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>@Model.AboutInfo</td>
                                <td>@Model.AboutEmail</td>
                                <td>@Model.AboutPhone</td>
                                <td>
                                    <div class="form-button-action">
                                        <a href="/Admin/AboutUs/UpdateAboutUs/@Model.AboutId" class="btn btn-link btn-primary">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
