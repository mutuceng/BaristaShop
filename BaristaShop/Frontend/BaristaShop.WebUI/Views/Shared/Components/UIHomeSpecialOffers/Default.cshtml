@model List<ResultSpecialOfferDto>

<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5">

        @foreach(var offer in Model)
        {
            <div class="col-md-6">
                <div class="product-offer mb-30" style="height: 300px;">
                    <img class="img-fluid" src="@offer.SpecialOfferImage" alt="BaristaShop @offer.SpecialOfferTitle">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@offer.SpecialOfferSubTitle</h6>
                        <h3 class="text-white mb-3">@offer.SpecialOfferTitle</h3>
                        <a href="" class="btn btn-primary">Hemen Faydalan</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>