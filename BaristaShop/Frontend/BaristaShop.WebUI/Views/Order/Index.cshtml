@model CreateAddressDto
@{
    ViewData["Title"] = "Siparis";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}


<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">

        <!-- ADRESS KISMI -->        
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="row">
                    @await Component.InvokeAsync("UIOrderAddress")

                    <form method="post" id="new-address-form" style="display: none;">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Adınız</label>
                                <input class="form-control" type="text" asp-for="Name" placeholder="adınız">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Soyadınız</label>
                                <input class="form-control" type="text" asp-for="Surname" placeholder="soyadınız">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>E-mail Adresiniz</label>
                                <input class="form-control" type="text" asp-for="Email" placeholder="mail@email.com">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Telefon Numaranız</label>
                                <input class="form-control" type="text" asp-for="Phone" placeholder="+90 123 456 78 90">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Address Satır 1</label>
                                <input class="form-control" type="text" asp-for="Detail1" placeholder="123 mahallesi">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Address Satır 2</label>
                                <input class="form-control" type="text" asp-for="Detail2" placeholder="123 sokak">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Ülke</label>
                                <input class="form-control" type="text" asp-for="Country" placeholder="Türkiye">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Şehir</label>
                                <input class="form-control" type="text" asp-for="City" placeholder="Şehir">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>İlçe</label>
                                <input class="form-control" type="text" asp-for="District" placeholder="İlçe">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Posta Kodu</label>
                                <input class="form-control" type="text" asp-for="ZipCode" placeholder="12345">
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

        <!-- SİPARİŞ ÖZETİ -->
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş</span></h5>

            <!-- SİPARİŞ EDİLEN ÜRÜNLER -->
            @await Component.InvokeAsync("UIOrderOrderSummary")

            <!-- ÖDEME SEÇENEKLERİ -->
            @* @await Component.InvokeAsync("UIOrderPaymentOptions") *@

            <div class="mb-5">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Ödeme Seçenekleri</span></h5>
                <div class="bg-light p-30">
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="paypal">
                            <label class="custom-control-label" for="paypal">Paypal</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                            <label class="custom-control-label" for="directcheck">Direct Check</label>
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                            <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                        </div>
                    </div>
                    <button class="btn btn-block btn-primary font-weight-bold py-3">Ödeme Adımına Geç</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->

<script>
    document.getElementById("add-new-address-btn").addEventListener("click", function() {
        document.getElementById("new-address-form").style.display = "block";
    });
</script>
